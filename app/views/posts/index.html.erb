<div class="container">
  <% if notice %>
  <p id="notice" class="alert alert-info"><%= notice %></p>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Content</th>
            <th>User</th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, post %></td>
            <td><%= post.content %></td>
            <td><%= link_to post.user.nickName, post.user %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% if user_signed_in? %>
<nav class="navbar navbar-default navbar-fixed-bottom">
  <div class="container">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bottomnav-collapse" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      </button>
      <div class="collapse navbar-collapse" id="bottomnav-collapse">
        <%= link_to 'New Post', new_post_path, class: "btn btn-default navbar-btn" %>
    </div>
  </div>
</nav>
<% end %>