<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="container">
  <% if notice %>
    <p id="notice" class="alert alert-info"><%= notice %></p>
  <% end %>
  <div class="row">
    <div class="col-md-9">
      <div class="form-group">
        <div class="field">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control", autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
          <% if @minimum_password_length %>
          <span class="help-block">(<%= @minimum_password_length %> characters minimum)</span>
          <% end %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :firstName, 'First Name' %>
          <%= f.text_field :firstName, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :lastName, 'Last Name' %>
          <%= f.text_field :lastName, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :nickName %>
          <%= f.text_field :nickName, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :school_id %>
          <% school_array = School.all.map { |school| [school.name, school.id] } %>
          <%= f.select :school_id, school_array, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :job %>
          <%= f.text_field :job, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :birthdate %>
          <%= f.date_select :birthdate, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <% if @user.errors.any? %>
      <div id="error_explanation" class="alert alert-warning">
        <p><%= pluralize(@user.errors.count, "error") %>:</p>
        <% @user.errors.full_messages.each do |message| %>
          * <%= message %><br>
        <% end %>
      </div>
      <% end %>
      <div class="btn-group btn-group-justified">
          <div class="btn-group"><%= f.submit "Save", class: "btn btn-warning" %></div>
          <%= link_to 'Cancel', @user, class: "btn btn-default btn-block" %>
        </div>
    </div>
  </div>
</div>
<% end %>