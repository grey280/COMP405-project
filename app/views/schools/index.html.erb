<div class="container">
  <div class="row">
    <div class="col-md-10"></div>
    <div class="col-md-2"><br>
      <%= link_to 'New School', new_school_path, class: "btn btn-default btn-block" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @schools.each do |school| %>
            <tr>
              <td><%= school.name %></td>
              <td><div class="btn-group">
                <%= link_to 'Show', school, class: "btn btn-default" %>
                <%= link_to 'Edit', edit_school_path(school), class: "btn btn-warning" %>
                <%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
              </div></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<p id="notice" class="alert"><%= notice %></p>
