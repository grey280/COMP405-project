<div class="container">
  <div class="row">
    <div class="col-md-10"></div>
    <div class="col-md-2"><br>
      <%= link_to 'New School', new_school_path, class: "btn btn-default btn-block" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Students</th>
          </tr>
        </thead>
        <tbody>
          <% @schools.each do |school| %>
            <tr>
              <td><%= link_to school.name, school %></td>
              <td><%= school.users.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<p id="notice" class="alert"><%= notice %></p>
