<div class="container">
  <% if notice %>
    <p id="notice" class="alert"><%= notice %></p>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Students</th>
          </tr>
        </thead>
        <tbody>
          <% @schools.each do |school| %>
            <tr>
              <td><%= link_to school.name, school %></td>
              <td><%= school.users.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<% if user_signed_in? %>
<nav class="navbar navbar-default navbar-fixed-bottom">
  <div class="container">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bottomnav-collapse" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      </button>
      <div class="collapse navbar-collapse" id="bottomnav-collapse">
        <%= link_to 'New School', new_school_path, class: "btn btn-default navbar-btn" %>
    </div>
  </div>
</nav>
<% end %>